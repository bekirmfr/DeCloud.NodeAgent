# EditorConfig â€” https://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{cs,csx}]
indent_size = 4

# C# style: file-scoped namespaces
csharp_style_namespace_declarations = file_scoped:suggestion

[*.{json,yaml,yml}]
indent_size = 2

[*.{sh,bash}]
indent_size = 4

[*.go]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

[*.sln]
indent_style = tab
